{
  "lm_studio": {
    "url": "http://127.0.0.1:1234/v1",
    "model": "liquid/lfm2-1.2b"
  },
  
  "agent_settings": {
    "temperature": 0.7,
    "max_tokens": 4096,
    "workspace_dir": "./agent_workspace",
    "enable_code_execution": true,
    "safe_mode": true,
    "timeout_seconds": 60,
    "stream": true,
    "show_token_count": true,
    "show_thinking": true
  },
  
  "display_settings": {
    "thinking_color": "dim",
    "response_color": "normal",
    "error_color": "red",
    "success_color": "green",
    "show_timestamps": false,
    "show_statistics": true
  },
  
  "project_workspace": {
    "projects_dir": "./projects",
    "data_dir": "./data",
    "research_dir": "./research",
    "templates_dir": "./templates",
    "output_dir": "./output"
  },
  
  "prompts": {
    "use_coding_context": true,
    "include_tool_examples": true,
    "prompt_style": "thinking_first",
    "encourage_step_by_step": true
  },

  "file_operations": {
    "plan_mode": true,
    "allow_file_write": true,
    "allow_file_edit": true,
    "allow_file_read": true,
    "allowed_directories": [
      "./agent_workspace",
      "./projects",
      "./data",
      "./output",
      "./research",
      "./templates"
    ],
    "max_file_size_kb": 500,
    "backup_before_edit": true,
    "overwrite_warning": true
  }
}
